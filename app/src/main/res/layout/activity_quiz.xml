<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz"
    android:background="#FFFFFF"
    android:paddingTop="40dp"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/tv_quiznum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/남색"
        android:text="#1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/문제"
        app:layout_constraintStart_toStartOf="@+id/문제"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/문제"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/답란"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/문제"
        app:layout_constraintVertical_bias="0.112" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/답란">

        <Button
            android:id="@+id/btn_1"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_2"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_3"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_4"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_5"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_minus"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_dot"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btn_6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_slash"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/남색"
            android:textColor="#FFFFFF"
            android:text="/"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_bs"
            android:layout_width="50dp"
            android:layout_height="51dp"
            android:backgroundTint="@color/남색"
            android:src="@drawable/ic_keyboard_backspace_black_24dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/다음문제"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/연핑"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="다음문제"
            android:textColor="@color/남색" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>